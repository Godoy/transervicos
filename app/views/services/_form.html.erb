<%= form_for(@service) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>

  <%= f.fields_for :address do |a| %>
    <div class="field">
      <%= a.label :street %><br>
      <%= a.text_field :street %>
    </div>
    <div class="field">
      <%= a.label :number %><br>
      <%= a.text_field :number %>
    </div>
    <div class="field">
      <%= a.label :complement %><br>
      <%= a.text_field :complement %>
    </div>
    <div class="field">
      <%= a.label :neighborhood %><br>
      <%= a.text_field :neighborhood, required: true %>
    </div>
    <div class="field">
      <%= a.label :city %><br>
      <%= a.text_field :city, required: true %>
    </div>
    <div class="field">
      <%= a.label :state %><br>
      <%= a.text_field :state, required: true %>
    </div>
  <% end %>

  <%= f.fields_for :subarea do |s| %>
    <%= s.collection_select "area", Area.all, :id, :area, {:prompt => 'Choose an area'}, {:required => true} %><br>
  <% end %>

  <%= f.collection_select :subarea_id, Subarea.all, :id, :subarea, {:prompt => 'Choose a subarea'}, {:required => true}%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
