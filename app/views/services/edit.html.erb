<section class="content">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <h1>Editar serviço</h1>
        <%= render 'form' %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      <% link_content = "<i class='fa fa-lg fa-eye'></i>&nbsp;Visualizar" %>
      <%= link_to link_content.html_safe, service_path(@service), class: 'btn btn-default'%>

      <% link_content = "<i class='fa fa-lg fa-bars'></i>&nbsp;Listar serviços" %>
      <%= link_to link_content.html_safe, services_path, class: 'btn btn-default'%>
      </div>
    </div>
  </div>
</section>
