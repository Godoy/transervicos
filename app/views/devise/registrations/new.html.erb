<section class="content">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <h1>Criar conta</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <h2>Seu nome</h2>
          <p class="text-white">Apenas um nome já é suficiente.</p>
          <fieldset class="form-fieldset">
            <div class="form-group input-user">
              <%= f.label :social_name, "Nome social" %>
              <%= f.text_field :social_name, autofocus: true, class: 'form-control', onkeyup: "userTyped('user_name_preference_social', this)" %>
            </div>
            <div class="form-group input-user">
              <%= f.label :civil_name, "Nome civil" %>
              <%= f.text_field :civil_name, class: 'form-control', onkeyup: "userTyped('user_name_preference_civil', this)" %>
            </div>
          </fieldset>
          <h2>Qual é seu nome preferencial?</h2>
          <p class="text-white">Esse é o nome que ficará visível junto aos seus serviços.</p>
          <fieldset class="form-fieldset">
            <div class="form-group">
              <div class="radio">
                <label>
                <input type="radio" name="user[name_preference]" id="user_name_preference_social" value="S" disabled>
                Nome social
                </label>
              </div>
              <div class="radio">
                <label>
                <input type="radio" name="user[name_preference]" id="user_name_preference_civil" value="C" disabled>
                Nome civil
                </label>
              </div>
            </div>
          </fieldset>

          <h2>Sobre você</h2>
          <fieldset class="form-fieldset">
            <div class="form-group">
              <%= f.label :birth_date, "Data de nascimento", :class=>"label-required" %>
              <%= f.text_field :birth_date, class: 'form-control'  %>
            </div>
            <div class="form-group">
              <%= f.label :username, "Nome de usuário" %>
              <%= f.text_field :username, class: 'form-control'  %>
            </div>
            <div class="form-group input-password">
              <%= f.label :password, "Senha", :class=>"label-required" %>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>
            <div class="form-group input-password">
              <%= f.label :password_confirmation, "Senha (confirmação)", :class=>"label-required" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :phone_number, "Número de telefone" %>
              <%= f.telephone_field :phone_number, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, "Endereço de e-mail", :class=>"label-required" %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </fieldset>

          <div class="text-center">
            <div class="checkbox font1-2x">
              <label>
                <%= f.check_box :terms_of_service, as: :boolean, label: 'Aceito os termos de uso', class: 'checkbox' %> Aceito os termos de uso
              </label>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Cadastrar", class: 'btn btn-block btn-form' %>
          </div>
        <% end %>

        <p class="not-user-text">Já tem cadastro?</p>

        <%= link_to "Acessar", new_session_path(resource_name), class: 'btn btn-block btn-form' %>
        <!-- <%= render "devise/shared/links" %> -->
      </div>
    </div>
  </div>
</section>
