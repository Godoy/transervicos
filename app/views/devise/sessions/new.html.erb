<section class="content">
    <div class="container">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">

            <% if flash[:notice] %>
              <p class="alert"><%= flash[:notice] %></p>
            <% end %>
            <% if flash[:alert] %>
              <p class="alert"><%= flash[:alert] %></p>
            <% end %>
            
            <h1 class="text-center">Entrar no Transerviços</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                    <%= f.email_field :email, placeholder: 'email', autofocus: true, class: 'form-control input-user' %>
                    <%= f.password_field :password, placeholder: 'senha', class: 'form-control input-password' %>
                </div>

                <div class="actions">
                <%= f.submit "Entrar", class: 'btn btn-block btn-form' %>
                </div>
            <% end %>

            <p class="not-user-text">Ainda não é usuário?</p>

            <%= link_to "Cadastre-se", new_registration_path(resource_name), class: 'btn btn-block btn-form' %><br />

            <%= link_to "Esqueci a senha", new_password_path(resource_name), class: 'lnk-forgot-password' %>
        </div>
    </div>
</section>
