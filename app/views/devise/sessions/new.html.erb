<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field-group">
    <div class="field">
      <%= f.email_field :email, placeholder: 'email', autofocus: true, class: 'input-user' %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: 'senha', class: 'input-password' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Entrar", class: 'btn' %>
  </div>
<% end %>

<p class="not-user-text">Ainda não é usuário?</p>

<%= link_to "Cadastre-se", new_registration_path(resource_name), class: 'btn' %><br />

<%= link_to "Esqueci a senha", new_password_path(resource_name), class: 'lnk-forgot-password' %>
