<section class="content">
    <div class="container">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <h1 class="text-center">Entrar no Transerviços</h1>
            <% if flash[:notice] %>
              <div class="alert alert-warning" role="alert">
                <%= flash[:notice] %>
              </div>
            <% end %>
            <% if flash[:alert] %>
              <div class="alert alert-warning" role="alert">
                <%= flash[:alert] %>
              </div>
            <% end %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <fieldset class="form-fieldset">
                <div class="form-group input-user">
                  <%= f.label :email, "Endereço de email", :class=>"label-required" %>
                  <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                </div>
                <div class="form-group input-password">
                  <%= f.label :password, "Senha", :class=>"label-required" %>
                  <%= f.password_field :password, class: 'form-control' %>
                </div>
              </fieldset>

              <div class="actions">
                <%= f.submit "Entrar", class: 'btn btn-block btn-form' %>
              </div>
            <% end %>

            <p class="not-user-text">Ainda não é usuário?</p>

            <%= link_to "Cadastre-se", new_registration_path(resource_name), class: 'btn btn-block btn-form' %><br />

            <%= link_to "Esqueci a senha", new_password_path(resource_name), class: 'lnk-forgot-password' %>
          </div>
        </div>
    </div>
</section>
