<div class="modal fade" id="reportModal" tabindex="-1" role="dialog" aria-labelledby="reportModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for :report, url: report_path, :html => {:id => 'report_service_form'}  do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="reportModalLabel">Denunciar este serviço</h4>
      </div>
      <div class="modal-body">
          <%= f.hidden_field :service_id, required: true %>
          <div class="form-group">
            <%= f.label :email, "Insira seu email:", class: "control-label label-required" %>
            <%= f.text_field(:email, id:'report_email', type: 'email', oninput:'setCustomValidity("")', oninvalid: 'this.setCustomValidity("Preencha o email")', required: true, class: 'form-control') %>
            <span class="error" />
          </div>
          <div class="form-group">
            <%= f.label :detail, "Insira a descrição da sua denúncia para este serviço:", class:"control-label label-required" %>
            <%= f.text_area(:detail, oninput:'setCustomValidity("")', oninvalid: 'this.setCustomValidity("Preencha a descrição.")', required: true, rows: 10, class: 'form-control') %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <%= f.submit 'Submeter', class:'btn btn-danger' %>
      </div>
        <% end %>
    </div>
  </div>
</div>
